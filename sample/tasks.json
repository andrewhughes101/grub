{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "GRUB",
			"type": "shell",
			"command": "${config:grub.client_build_tool} --repo-path ${workspaceFolder} ${config:grub.server_root} ${config:grub.server} ${config:grub.server_git_dir}",

			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher":
			{
				"owner": "cpp",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"source": "xlc",
				"pattern": {
					"regexp": "^(WARNING|ERROR|INFORMATIONAL)\\s+[A-Z0-9]*\\s+(.*):(\\d+)\\s+(.*)$",
					"file": 2,
					"line": 3,
					"column": 5,
					"severity": 1,
					"message": 4
				}
			}
		}
	]
}
